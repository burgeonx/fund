<div class="container content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">      
      <div class="panel panel-default">
        <div class="container">
      
          <br>
         
          <h3 class="text-center"><strong>Create A Free Account</strong></h3>
          
          <br>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.select :amount, [["$5000 - $10,000", "$5000 - $10,000"], ["$10,001 - $15,000", "$10,001 - $15,000"], ["$15,001 - $20,000", "$15,001 - $20,000"], ["$20,001 - $25,000", "$20,001 - $25,000"], ["$25,001 - $30,000", "$25,001 - $30,000"], ["$30,001 - $35,000", "$30,001 - $35,000"], ["$35,001 - $50,000", "$35,001 - $50,000"], ["$50,001 - $75,000", "$50,001 - $75,000"], ["$75,001 - $150,000", "$75,001 - $150,000"], ["$150,001 - $250,000", "$150,001 - $250,000"], ["More than $250,000", "More than $250,000"]],
                            id: "amount", prompt: "How much do you need?", class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <div class="col-10">
              <%= f.text_field :company_name, :placeholder => "Company Name", class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-10">
              <%= f.text_field :company_zip, :placeholder => "Company Zip Code", class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-10">
              <%= f.text_field :name, :placeholder => "Your Full Name", class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-10">
              <%= f.email_field :email, :placeholder => "Work Email Address", class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-10">
              <%= f.password_field :password, :placeholder => "Create Password", class: "form-control", required: true %>
            </div>
          </div>  
          <div>
            <%= button_tag( :class => "btn btn-submit btn-block") do %>
              Apply Now &emsp;<i class="fas fa-arrow-right text-white arrow0"></i>
            <% end %>
          </div>
          <% end %>
        <br>
        </div> 
      </div>
      
      <div class="panel panel-default">
        <p></p>
        <div class="container">
          <center><span>Already have a Burgeon account? <%= link_to "Log in", new_session_path(resource_name), class: "underline" %></span></center>
          <p></p>
        </div>
      </div>
    </div>
  </div> 
</div>